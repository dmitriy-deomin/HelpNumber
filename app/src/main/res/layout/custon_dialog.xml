<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ваш опретор :"
        android:id="@+id/textView4"
        android:layout_gravity="center_horizontal"
        android:textSize="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Оператор"
        android:id="@+id/textView_dialog_operator"
        android:layout_gravity="center_horizontal"
        android:textSize="17dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Нет\n(выбрать)"
            android:id="@+id/button_dialog_net"
            android:layout_weight="1" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Да\n(делаем запрос)"
            android:id="@+id/button_dialog_da"
            android:layout_weight="1" />
    </LinearLayout>
</LinearLayout>